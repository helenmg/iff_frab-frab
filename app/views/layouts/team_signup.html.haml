!!!
%html
  %head
    %title
      frab - Conference Management
    = stylesheet_link_tag "application"
    = csrf_meta_tags
  %body
    .container
      .topbar
        .fill
          .container
            - if @conference
              = link_to @conference.title + " - Conference Management", new_cfp_session_path, class: "brand"
            - else
              = link_to 'Conference Management', '#', class: 'brand'
            %ul.nav.secondary-nav.pull-right
              - if current_user
                %li= link_to t("logout", default: "Logout"), cfp_session_path, method: :delete
    .container
      .main-content
        = yield
